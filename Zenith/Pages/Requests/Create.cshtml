@page
@model Zenith.Pages.Requests.CreateModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Request.Name" class="control-label"></label>
                <input asp-for="Request.Name" class="form-control" placeholder="Please enter your name." />
                <span asp-validation-for="Request.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.DateOfToday" class="control-label"></label>
                <input asp-for="Request.DateOfToday" class="form-control" />
                <span asp-validation-for="Request.DateOfToday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.DateOfRequest" class="control-label"></label>
                <input asp-for="Request.DateOfRequest" class="form-control" />
                <span asp-validation-for="Request.DateOfRequest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.Reason" class="control-label"></label>
                <input asp-for="Request.Reason" class="form-control" placeholder="Why do you need this day off?" />
                <span asp-validation-for="Request.Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.Email" class="control-label"></label>
                <input asp-for="Request.Email" class="form-control" />
                <span asp-validation-for="Request.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}